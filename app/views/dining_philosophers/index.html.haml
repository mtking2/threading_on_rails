	.text-center.mb-5
		.h1.display-4.mb-5 Dining Philosophers

		.mx-5
			%svg{ xmlns: "http://www.w3.org/2000/svg", height: '500', width: '500'}
				- angle_diff = 360 / @chopsticks.length

				%g
					- @philosophers.each_with_index do |philosopher, i|
						%text{ x: '250', y: '60', 'font-size': '64', 'text-anchor': 'middle', 'dominant-baseline': 'central', transform: "rotate(#{i * angle_diff} 250 250)" }
							üòê
						%text{ x: '250', y: '10', fill: 'grey', 'font-size': '16', 'text-anchor': 'middle', 'dominant-baseline': 'central', transform: "rotate(#{i * angle_diff} 250 250)" }
							= philosopher.name
				%g
					- @chopsticks.each_with_index do |chopstick, i|
						%rect{ x: '250', y: '30', width: '3', height: '50', fill: 'grey', transform: "rotate(#{(i * angle_diff) + angle_diff / 2} 250 250)" }

				%circle{ cx: '250', cy: '250', r: '150', stroke: '#987456', 'stroke-width': '5', fill: '#c19a6b' }

				%g
					- @chopsticks.length.times do |i|
						%text{ x: '250', y: '125', 'font-size': '52', 'text-anchor': 'middle', 'dominant-baseline': 'central', transform: "rotate(#{i * angle_diff} 250 250)" }
