
.p-2
	.h5 Max Threads: #{ENV['RAILS_MAX_THREADS']}
	#current-threads.h5 Current Threads: #{@num_current_threads}

.my-2.d-flex.justify-content-center
	#channel-state= channel_state

.my-2.d-flex.justify-content-center
	= button_to pc_start_path, remote: true, class: "btn btn-lg btn-light mx-1" do
		%i.fa-solid.fa-play
	= button_to pc_pause_path, remote: true, class: "btn btn-lg btn-light mx-1" do
		%i.fa-solid.fa-pause
	= button_to pc_stop_path, remote: true, class: "btn btn-lg btn-light mx-1" do
		%i.fa-solid.fa-stop

.container.text-center.border.border-5.rounded.border-opacity-25
	.row.header
		.col-md-3.border-end.border-5.border-opacity-25
			.h2 Producers
		.col-md-6
			.h2 Resources
		.col-md-3.border-start.border-5.border-opacity-25
			.h2 Consumers
	.row.container-body
		.col-md-3.d-grid.justify-content-center.border-end.border-5.border-opacity-25
			#producers
				- producer_threads.each do |thread|
					= render partial: "pc/producer", locals: { id: thread.id, type: thread.class.name, color: thread.color }
			.align-self-end.text-center.mb-2= button_to "Add Producer", pc_add_producer_path, remote: true, class: "btn btn-lg btn-light"
		.col-md-6
			#resources.d-flex.flex-wrap
				- @resources.each do |resource|
					= render partial: "pc/item", locals: { id: resource.id, thread_id: resource.thread_id, color: resource.color }
		.col-md-3.d-grid.justify-content-center.border-start.border-5.border-opacity-25
			#consumers
				- consumer_threads.each do |thread|
					= render partial: "pc/consumer", locals: { id: thread.id, type: thread.class.name, color: thread.color }
			.align-self-end.text-center.mb-2= button_to "Add Consumer", pc_add_consumer_path, remote: true, class: "btn btn-lg btn-light"
